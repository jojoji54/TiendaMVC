@model Tienda.CORE.Models.Producto

@{
    ViewBag.Title = Model.Nombre + " Detalles";
}

<h2>@Html.DisplayFor(model=>model.Nombre)</h2>

<div>
    <div class="col-md-2">
        <img class="img-responsive" src="~/Content/ProductImages/@Model.Imagen"/>
    </div>
    <div class="col-md-10">
        <dl class="dl-horizontal">
          

            <dt>
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Precio)
            </dt>

            <dd>
                $@Html.DisplayFor(model => model.Precio)
            </dd>

            <dt></dt>
            <dd><a href="@Url.Action("AgregarACesta", "Cesta", new { Id=Model.Id })" class="btn btn-default">Add To Basket</a></dd>

            <dt></dt>
            <dd>@Html.ActionLink("Back to List", "Index")</dd>
</dl>
    </div>
 </div>
<div class="col-md-12 clearfix"></div>
